{
    "version": "0.1.0",
    "command": "tsc",
    "isShellCommand": true,
    "showOutput": "always",
    "args": ["--sourceMap", "--watch", "--project"],
    "tasks": [
        {
            "taskName": ".",
            "problemMatcher": "$tsc-watch",
            "showOutput": "always",
            "isBuildCommand": true,
            "isBackground": true
        },
        {
            "taskName": "test",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "isTestCommand": true
        }
    ]
}